<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout"
        android:background="@drawable/gray_frame"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="10dp">


    <ImageView
            android:id="@+id/download_topic_list_row"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right|center_vertical" android:background="@android:drawable/ic_delete"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="45dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/original_word_new_topic_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A9A9A9"
                android:text="word"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="20dp"/>

        <ImageView
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:background="@drawable/arrow_right"/>

        <EditText
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/translated_word_new_topic_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A9A9A9"
                android:text="русский перевод, пример"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="16dp"/>

    </LinearLayout>



</FrameLayout>